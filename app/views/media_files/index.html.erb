<table>
  <thead>
    <tr>
      <th>Uploaded Files</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
  <% @media_files.each do |media_file| %>
    <tr>
      <td><%= media_file.title %></td>
      <td><%= link_to "Show", media_file %></td>
      <td><%= link_to "Edit", edit_media_file_path(media_file) if media_file.user == current_user %></td>
      <td><%= link_to"Destroy", media_file, :confirm => 'Are you sure?', :method => :delete if media_file.user == current_user %></td>
    </tr>
  <% end %>
  </tbody>
</table>
<p><%= link_to "New Asset", new_media_file_path %></p>
<script>
  $(document).ready(function() {
    $('table').DataTable();
  } );
</script>